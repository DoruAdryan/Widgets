<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_android_blue" />

    <TextView
        android:id="@+id/tv_item_contact_prefix"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/circular_shape"
        android:gravity="center"
        android:padding="10dp"
        tools:text="P" />

    <TextView
        android:id="@+id/tv_item_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@id/ivIcon"
        android:layout_toEndOf="@id/tv_item_contact_prefix"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="Popescu Marian" />

    <TextView
        android:id="@+id/tv_item_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_contact_name"
        android:layout_alignLeft="@id/tv_item_contact_name"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/ivIcon"
        android:textSize="13sp"
        android:textStyle="italic"
        tools:text="0775165174" />

    <TextView
        android:id="@+id/tv_item_contact_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_contact_phone"
        android:layout_alignLeft="@id/tv_item_contact_phone"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/ivIcon"
        android:textSize="13sp"
        tools:text="popescu.marian@gmail.com" />

</RelativeLayout>