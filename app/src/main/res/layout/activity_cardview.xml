<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/material_keyline_1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_sample_height"
        android:layout_marginLeft="@dimen/material_keyline_1"
        android:layout_marginRight="@dimen/material_keyline_1"
        app:cardBackgroundColor="@android:color/holo_red_light"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/sample_text_short"
            android:textColor="@android:color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_sample_height"
        android:layout_marginLeft="@dimen/material_keyline_1"
        android:layout_marginTop="@dimen/space_between_multiple_fields"
        android:layout_marginRight="@dimen/material_keyline_1"
        app:cardBackgroundColor="@android:color/holo_green_light"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/sample_text_short"
            android:textColor="@android:color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_sample_height"
        android:layout_marginLeft="@dimen/material_keyline_1"
        android:layout_marginTop="@dimen/space_between_multiple_fields"
        android:layout_marginRight="@dimen/material_keyline_1"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/sample_text_short"
            android:textColor="@android:color/white" />

    </androidx.cardview.widget.CardView>
</LinearLayout>